<!DOCTYPE html>
<html>
<head>
  <title>CoffeeApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : Rails.application.secrets.facebook_key,
      xfbml      : true,
      version    : 'v2.3'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>


	<div id="user-widget">
		<% if session[:roaster_id] %>
			Welcome <%= session[:name] %>!
			<%= link_to "Logout", signout_path, id: "sign_out" %>
			<%= link_to "All Cafes", beanformed_companies_path %>
			<% if session[:role] == "user" %>
				<%= link_to "Register Your Cafe", new_beanformed_company_path %>
			<% elsif session[:role] == "admin" %>
				<%= link_to "All Roasters", beanformed_roaster_index_path %>
			<% else @current_user.role == "roaster" %>
				<%= link_to "Your Beans", beanformed_company_beans(@current_user.company_id) %>
			<% end %>
		<% else %>
			<%= link_to "Facebook Sign-In", "/auth/facebook", id: "sign_in" %>
		<% end %>
	</div>
	
	<% if flash %>
		<% flash.each do |name, message| %>
		<div class="flash-<%= name %>"><%= message %></div>	
		<% end %>
	<% end %>

	<!-- put this where I want the likes and share footer -->
	<div
	  class="fb-like"
	  data-share="true"
	  data-width="450"
	  data-show-faces="true">
	</div>
<%= yield %>

</body>
</html>
