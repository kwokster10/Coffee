<div id="container">
    <h2 style="text-align: center;">Edit Your Company's Info</h2>
    <div class="col-lg-10 col-lg-offset-1 col-sm-10 col-sm-offset-1">
    <%= form_for :company, url:{action: :update}, method: :put do |f| %>
    	<div class="form-group">
    		<%= label_tag "Who do you roast for: " %>
        	<%= f.text_field :name, class: "form-control", value: @company.name %>
        </div>

        <div class="form-group">
        <%= label_tag "A resource to find out more info about your company: " %>
        <%= f.url_field :website, class: "form-control", value: @company.website %>
        </div>

        <div class="form-group">
        <%= label_tag "Company Logo: " %>
        <%= f.url_field :logo, class: "form-control", value: @company.logo %>
        </div>

        <% if admin? %>
            <%= label_tag "Approved?: " %>
        	<%= f.text_field :approved, class: "form-control", value: true %><br>
        <% end %>
        <%= f.submit "Update Shop", class: "btn btn-info" %>
    <% end %>
    </div>
</div>