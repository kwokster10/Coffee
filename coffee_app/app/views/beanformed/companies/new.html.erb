<br>
<div id="container">
    <div class="row">
    <div class="col-lg-10 col-lg-offset-1 col-sm-10 col-sm-offset-1" style="margin-bottom: 20px">
    <h2>Who do you roast for?</h2>
      <%= link_to "Click If Cafe Exists Already", edit_beanformed_roaster_path(session[:roaster_id]), class: "btn home-btn" %>
    </div>

    </div>
<div class="row">
<div class="col-lg-10 col-lg-offset-1 col-sm-10 col-sm-offset-1">
<h3>New Cafe Registration</h3>
<%= form_for :company, url:{action: :create} do |f| %>
	<div class="form-group">
		<%= label_tag "New Cafe Name: " %>
    	<%= f.text_field :name, class: "form-control", placeholder: "Company Name" %>
    </div>

    <div class="form-group">
	    <%= label_tag "A resource to find out more info about your company: " %>
	    <%= f.url_field :website, class: "form-control", placeholder: "eg: Website or Facebook Page" %>
    </div>

    <div class="form-group">
	    <%= label_tag "Company Logo: " %>
	    <%= f.url_field :logo, class: "form-control", placeholder: "Image Url" %>
    </div>

    <% if session[:role] == "user" || session[:role] == "pending" %>
        <div class="form-group">
    		<%= label_tag "Number To Reach You At: " %>
        	<%= f.telephone_field :phone, class: "form-control", placeholder: "Just Digits of Your /Company Phone Number" %>
        </div>
    <% end %>

    <% if admin? %>
    	<%= f.hidden_field :approved, value: true %><br>
    <% else %>
    	<%= f.hidden_field :approved, value: false %><br>
    <% end %>
    <%= f.submit "Register", class: "btn btn-info" %>
<% end %>
</div>
</div>
</div>
<%= render :partial => 'beanformed/beans/footer' %>

