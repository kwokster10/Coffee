<br>
<% @companies.each do |company| %>
	<div class="each-company">
		<li><%= link_to "#{company.name}'s Bean Offerings", beanformed_company_beans_path(company.id) %> -- Homepage: 
		<a href="<%= company.website %>"><%= company.website %></a></li>
	</div>
	<% if admin? %>
		<p>Status: <%= company.approved %></p>
		<%= link_to "Edit", edit_beanformed_company_path(company.id) %>
	    <%= link_to 'Delete', beanformed_company_path(company.id), :method => :delete, :confirm => "Are you sure you want to delete this coffee shop?" %>
	<% end %>
<% end %>



