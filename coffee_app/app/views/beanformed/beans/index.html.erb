<br>
<h2><%= @company.name %>'s Beans:</h2>
<% @company.beans.each do |bean| %>
<div class="each-bean">
		<h3><%= link_to bean.name, beanformed_company_bean_path(@company.id, bean.id) %></h3>
<% end %>
</div>
<div class="add-bean">
	<% if admin? || @current_user.company_id.to_i == @company.id %>
		<%= link_to "New Bean Form", new_beanformed_company_bean_path(@company.id) %>
	<% end %>
</div>

