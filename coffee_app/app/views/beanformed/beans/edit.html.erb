<br>
<%= form_for :bean, url:{action: :update}, method: :put, html: {class: "form-horizontal"} do |f| %>

	<div class="form-group">
		<label class="col-sm-2 control-label">Name:</label>
		<div class="col-sm-10">
			<%= f.text_field :name, class: "form-control", value: @bean.name %>
	  	</div>
  	</div>

	<div class="form-group">
		<label class="col-sm-2 control-label">Origin:</label>
	 	<div class="col-sm-10">
			<%= f.text_field :origin, class: "form-control", value: @bean.origin %>
		</div>
	</div>

	<div class="form-group">
	<label class="col-sm-2 control-label">Estate:</label>
	<div class="col-sm-10">
	<%= f.text_field :estate, class: "form-control", value: @bean.estate %>
	  </div>
  </div>

  	<div class="form-group">
		<label class="col-sm-2 control-label">Variety:</label>
		<div class="col-sm-10">
			<%= f.text_field :variety, class: "form-control", value: @bean.variety%>
		</div>
  	</div>

	<div class="form-group">
		<label class="col-sm-2 control-label">Processing:</label>
		<div class="col-sm-10">
			<%= f.text_field :processing, class: "form-control", value: @bean.processing %>
		</div>
  	</div>

	<div class="form-group">
		<label class="col-sm-2 control-label">Season:</label>
		<div class="col-sm-10">
			<%= f.text_field :season, class: "form-control", value: @bean.season %>
		</div>
  	</div>

	<div class="form-group">
		<label class="col-sm-2 control-label">Elevation:</label>
		<div class="col-sm-10">
			<%= f.text_field :elevation, class: "form-control", value: @bean.elevation %>
		</div>
  	</div>

	<div class="form-group">
    	<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Update", class: "btn btn-info" %>
		</div>
  	</div>
<% end %> 




