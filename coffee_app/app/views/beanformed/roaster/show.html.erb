<!-- shows profile to roaster, so need to include many relationships -->
<div id="show-roaster">
<h2><%= @roaster.name %></h2>
<p>With <%= link_to @company.name, beanformed_company_beans_path(@company.id) %></p>
	<% @company.beans.each{|cafe| %>
		<div class="each-coffee">
			<ul>
				<li><%= cafe.name %></li>
				<li><%= cafe.origin %></li>
				<li><%= cafe.estate %></li>
				<li><%= cafe. variety %></li>
				<li><%= cafe.season %></li>
				<li><%= cafe.elevation %></li>
				<li><%= link_to "Edit", edit_beanformed_company_bean_path(@company.id, cafe.id) %></li>
			</ul>
		</div>
	<% } %>
</div>
